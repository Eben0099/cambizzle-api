# Configuration pour la production sur LWS Panel
# Cambizzle API - www.cambizzle.seed-innov.com
# RENOMMEZ CE FICHIER EN .env AVANT DE L'UPLOADER

# Environnement CodeIgniter
CI_ENVIRONMENT = production

# URL de base de l'application (API dans /api/)
app.baseURL = 'http://www.cambizzle.seed-innov.com/api/'
app.indexPage = ''

# Configuration de la base de données (À MODIFIER avec vos vraies valeurs LWS)
database.default.hostname = localhost
database.default.database = cambizzle_production
database.default.username = cambizzle_user
database.default.password = VOTRE_MOT_DE_PASSE_DB_LWS
database.default.DBDriver = MySQLi
database.default.port = 3306

# Clés de sécurité (À GÉNÉRER AVEC LE SCRIPT generate_production_keys.php)
encryption.key = hex2hex:VOTRE_CLE_ENCRYPTION_GENEREE
JWT_SECRET_KEY = VOTRE_CLE_JWT_GENEREE
JWT_TIME_TO_LIVE = 3600

# Configuration CORS pour permettre les appels depuis le frontend React
cors.allowedOrigins = http://www.cambizzle.seed-innov.com,https://www.cambizzle.seed-innov.com
cors.allowedHeaders = Content-Type,Authorization,X-Requested-With,X-API-Key
cors.allowedMethods = GET,POST,PUT,DELETE,PATCH,OPTIONS
cors.allowCredentials = true

# Configuration des emails (à configurer selon votre hébergeur LWS)
email.SMTPHost = localhost
email.SMTPUser = ''
email.SMTPPass = ''
email.SMTPPort = 587
email.SMTPCrypto = tls
email.fromEmail = noreply@cambizzle.seed-innov.com
email.fromName = 'Cambizzle'

# Configuration des logs
logger.threshold = 4

# Cache et optimisation
cache.handler = file
cache.backupHandler = dummy

# Session configuration
session.driver = files
session.savePath = null
session.cookieName = cambizzle_session













