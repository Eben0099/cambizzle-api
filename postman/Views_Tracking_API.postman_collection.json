{
  "info": {
    "name": "Views Tracking API - Tests",
    "description": "Collection for testing the Views Tracking System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Views Tracking Tests",
      "item": [
        {
          "name": "1. Get Ad Details (Increments Views)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/ads/123",
              "host": [
                "{{BASE_URL}}"
              ],
              "path": [
                "ads",
                "123"
              ]
            },
            "description": "Fetches ad details and increments view_count by 1"
          },
          "response": []
        },
        {
          "name": "2. List Ads Sorted by Views (Descending)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/ads/?sort_by=view_count&sort_order=DESC&per_page=10",
              "host": [
                "{{BASE_URL}}"
              ],
              "path": [
                "ads",
                ""
              ],
              "query": [
                {
                  "key": "sort_by",
                  "value": "view_count"
                },
                {
                  "key": "sort_order",
                  "value": "DESC"
                },
                {
                  "key": "per_page",
                  "value": "10"
                }
              ]
            },
            "description": "Lists all ads sorted by view count (highest first)"
          },
          "response": []
        },
