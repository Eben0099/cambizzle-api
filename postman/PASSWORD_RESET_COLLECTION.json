{
  "info": {
    "_postman_id": "password-reset-collection",
    "name": "Cambizzle - Password Reset",
    "description": "Réinitialisation de mot de passe via numéro de téléphone",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Forgot Password",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    var jsonData = pm.response.json();",
              "    pm.environment.set('reset_token', jsonData.data.token);",
              "    pm.environment.set('reset_code', jsonData.data.code);",
              "    ",
              "    pm.test('Response status is 200', function() {",
              "        pm.response.to.have.status(200);",
              "    });",
              "    ",
              "    pm.test('Response has reset token', function() {",
              "        pm.expect(jsonData.data.token).to.be.a('string');",
              "        pm.expect(jsonData.data.token.length).to.be.greaterThan(0);",
              "    });",
              "    ",
              "    pm.test('Token expires in 24h (86400 seconds)', function() {",
              "        pm.expect(jsonData.data.expires_in).to.equal(86400);",
              "    });",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"phone\": \"+237677123456\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/auth/forgot-password",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "auth",
            "forgot-password"
          ]
        }
      },
      "response": []
    },
    {
      "name": "2. Reset Password",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    var jsonData = pm.response.json();",
              "    ",
              "    pm.test('Response status is 200', function() {",
              "        pm.response.to.have.status(200);",
              "    });",
              "    ",
              "    pm.test('Password reset successful', function() {",
              "        pm.expect(jsonData.success).to.be.true;",
              "        pm.expect(jsonData.message).to.include('Mot de passe réinitialisé');",
              "    });",
              "    ",
              "    pm.test('User data is returned', function() {",
              "        pm.expect(jsonData.data.user).to.be.an('object');",
              "        pm.expect(jsonData.data.user.id_user).to.be.a('number');",
              "    });",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"token\": \"{{reset_token}}\",\n  \"password\": \"newPassword123\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/auth/reset-password",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "auth",
            "reset-password"
          ]
        }
      },
      "response": []
    },
    {
      "name": "3. Login with New Password",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    var jsonData = pm.response.json();",
              "    pm.environment.set('user_token', jsonData.data.token);",
              "    ",
              "    pm.test('Login successful', function() {",
              "        pm.response.to.have.status(200);",
              "        pm.expect(jsonData.success).to.be.true;",
              "    });",
              "    ",
              "    pm.test('Auth token received', function() {",
              "        pm.expect(jsonData.data.token).to.be.a('string');",
              "    });",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"phone\": \"+237677123456\",\n  \"password\": \"newPassword123\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/auth/login",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "auth",
            "login"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Test - Invalid Token",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Invalid token returns 400', function() {",
              "    pm.response.to.have.status(400);",
              "});",
              "",
              "if (pm.response.code === 400) {",
              "    var jsonData = pm.response.json();",
              "    pm.test('Error message mentions invalid token', function() {",
              "        pm.expect(jsonData.message.toLowerCase()).to.include('invalide');",
              "    });",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"token\": \"invalid-token-123456\",\n  \"password\": \"newPassword123\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/auth/reset-password",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "auth",
            "reset-password"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Test - Password Too Short",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Short password returns 422', function() {",
              "    pm.response.to.have.status(422);",
              "});",
              "",
              "if (pm.response.code === 422) {",
              "    var jsonData = pm.response.json();",
              "    pm.test('Validation error returned', function() {",
              "        pm.expect(jsonData.errors).to.be.an('object');",
              "        pm.expect(jsonData.errors.password).to.exist;",
              "    });",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
